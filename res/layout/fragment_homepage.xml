<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:focusable="true"   
        android:focusableInTouchMode="true"
        android:layout_margin="5dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:contentDescription="@null"
            android:layout_gravity="center"
            android:src="@drawable/slibe"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:drawableLeft="@drawable/search_product"
            android:hint="@string/search_hint"
            android:inputType="@null"
            android:singleLine="true"
            android:textSize="@dimen/input_size"
             />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:drawableRight="@drawable/jt_down"
            android:paddingRight="5dp"
            style="@style/title_style"
            android:text="杭州" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			<FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/grey_main" />
            <fragment 
                android:id="@+id/frame_structure"
                android:name="com.gongheshe.fragment.HomeStructureFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/grey_main" />

            <fragment
                android:id="@+id/frame_electrome"
                android:name="com.gongheshe.fragment.HomeElecFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_width" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/grey_main" />

            <fragment
                android:id="@+id/frame_bath"
                android:name="com.gongheshe.fragment.HomeBathFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_width" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/grey_main" />

            <fragment
                android:id="@+id/frame_wood"
                android:name="com.gongheshe.fragment.HomeWoodFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_width" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/grey_main" />

            <fragment
                android:id="@+id/frame_face"
                android:name="com.gongheshe.fragment.HomeFaceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_width" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/grey_main" />

            <fragment
                android:id="@+id/frame_lamp"
                android:name="com.gongheshe.fragment.HomeLampFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_width" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/grey_main" />

            <fragment
                android:id="@+id/frame_furnish"
                android:name="com.gongheshe.fragment.HomeFurnishFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_width" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
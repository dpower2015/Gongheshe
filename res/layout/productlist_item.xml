<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:background="@color/white">
     <LinearLayout 
    android:id="@+id/leftView"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"/>
     <TextView 
         android:id="@+id/product_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="titile"
         style="@style/foot_stype"
         android:layout_gravity="center"
         />
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
          <TextView 
         android:id="@+id/product_yuan"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="#2"
         android:layout_marginLeft="10dp"
         style="@style/foot_stype"
         />
            <TextView 
         android:id="@+id/product_dollor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:text="#12"
         style="@style/foot_stype"
         />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/visit"
            android:layout_toLeftOf="@id/product_dollor"
            android:layout_alignBottom="@id/product_dollor"
            />
        
     </RelativeLayout >
 </LinearLayout> 
 <View 
    android:layout_width="5dp"
    android:layout_height="match_parent"
    android:background="@color/grey_main"
     />
  <LinearLayout 
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/rightView">
    <ImageView
        android:id="@+id/product_icon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"/>
     <TextView 
         android:id="@+id/product_title1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="titile"
         style="@style/foot_stype"
         android:layout_gravity="center"
         />
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
          <TextView 
         android:id="@+id/product_yuan1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="#2"
         android:layout_marginLeft="10dp"
         style="@style/foot_stype"
         />
           <TextView 
         android:id="@+id/product_dollor1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:text="#12"
         style="@style/foot_stype"
         />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/visit"
            android:layout_toLeftOf="@id/product_dollor1"
            android:layout_alignBottom="@id/product_dollor1"
            />
        
     </RelativeLayout >
 </LinearLayout>    
 </LinearLayout>    